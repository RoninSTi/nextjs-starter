{
  "name": "nextjs-starter",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "dev:full": "./dev.sh",
    "dev:stop": "./shutdown.sh",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "db:migrate": "NODE_OPTIONS=--experimental-specifier-resolution=node migrate-mongo up",
    "db:rollback": "NODE_OPTIONS=--experimental-specifier-resolution=node migrate-mongo down",
    "db:status": "NODE_OPTIONS=--experimental-specifier-resolution=node migrate-mongo status",
    "db:create-migration": "NODE_OPTIONS=--experimental-specifier-resolution=node node -e \"import('./src/db/migration-utils.js').then(m => m.createMigration(process.argv[1]))\"",
    "db:seed": "NODE_OPTIONS=--experimental-specifier-resolution=node node --experimental-modules --es-module-specifier-resolution=node src/db/seed.js",
    "db:reset": "NODE_OPTIONS=--experimental-specifier-resolution=node migrate-mongo down --to 0 && NODE_OPTIONS=--experimental-specifier-resolution=node migrate-mongo up"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.58.1",
    "@opentelemetry/context-async-hooks": "^2.0.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.200.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.200.0",
    "@opentelemetry/instrumentation-express": "^0.49.0",
    "@opentelemetry/instrumentation-fetch": "^0.200.0",
    "@opentelemetry/instrumentation-http": "^0.200.0",
    "@opentelemetry/instrumentation-mongodb": "^0.53.0",
    "@opentelemetry/resources": "^2.0.0",
    "@opentelemetry/sdk-node": "^0.200.0",
    "@opentelemetry/semantic-conventions": "^1.33.0",
    "@radix-ui/react-avatar": "^1.1.9",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-slot": "^1.2.2",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "lucide-react": "^0.510.0",
    "migrate-mongo": "^12.1.3",
    "mongodb": "^6.16.0",
    "mongoose": "^8.14.3",
    "next": "15.3.2",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.56.3",
    "shadcn-ui": "^0.9.5",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@shadcn/ui": "^0.0.4",
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20",
    "@types/react": "^18.3.21",
    "@types/react-dom": "^18.3.7",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5"
  }
}